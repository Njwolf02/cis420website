@model Vaccines_and_Travel_Clinic.Models.SaleLine

@{
    ViewBag.Title = "Details";
}

<div class="row">&nbsp;</div>

<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <h3>Details</h3>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Sale Number")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sale.ID)
        </dd>

        <dt>
            @Html.DisplayName("Item Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

    </dl>
</div>
<div class="row">&nbsp;</div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-6">
                @if (Request.IsAuthenticated && User.IsInRole("Admin") || User.IsInRole("CanModifyInventory"))
{
    <a href="@Url.Action("Index")" class="btn btn-default pull-right right-pulled-button-space">
        <span class="glyphicon glyphicon-remove"></span>
        Cancel
    </a>
    <a href="@Url.Action("Edit")" class="btn btn-warning pull-right">
        <span class="glyphicon glyphicon-pencil"></span>
        Edit
    </a>
}
else if (Request.IsAuthenticated && User.IsInRole("CanViewInventory"))
{
    <a href="@Url.Action("Index")" class="btn btn-default pull-right right-pulled-button-space">
        <span class="glyphicon glyphicon-remove"></span>
        Cancel
    </a>
}
            </div>
        </div>
    </div>
</div>


