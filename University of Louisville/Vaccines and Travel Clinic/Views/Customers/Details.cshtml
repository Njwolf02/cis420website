@model Vaccines_and_Travel_Clinic.Models.Customer

@{
    ViewBag.Title = "Details";
}

<div class="row">&nbsp;</div>

<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <h3>Details</h3>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.City)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.City)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.State)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.State)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Zip)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Zip)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Country)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Country)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Race)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Race)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Age)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Age)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Gender)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Gender)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Origin)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Origin)
                </dd>

            </dl>
        </div>

<div class="row">&nbsp;</div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-6">
                @if (Request.IsAuthenticated && User.IsInRole("Admin") || User.IsInRole("CanModifyInventory"))
                {
                    <a href="@Url.Action("Index")" class="btn btn-default pull-right right-pulled-button-space">
                        <span class="glyphicon glyphicon-remove"></span>
                        Cancel
                    </a>
                    <a href="@Url.Action("Edit")" class="btn btn-warning pull-right">
                        <span class="glyphicon glyphicon-pencil"></span>
                        Edit
                    </a>
                }
                else if (Request.IsAuthenticated && User.IsInRole("CanViewInventory"))
                {
                    <a href="@Url.Action("Index")" class="btn btn-default pull-right right-pulled-button-space">
                        <span class="glyphicon glyphicon-remove"></span>
                        Cancel
                    </a>
                }
            </div>
        </div>
    </div>
</div>

